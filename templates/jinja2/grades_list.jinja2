<ul class="grades">
{%- for grade in grades -%}
    <li class="grade" id="grade{{grade}}">{% if lang == "en" %}Grade {% elif lang == "hi" %}Standard (рдкрдж) {% endif %}{{ grade }}</li>
    {%- for board in grade_boards[grade] -%}
        <ul class="boards" id="{{loop.index}}">
            <li class="board" id="{{board.lower()}}"><a href="#" onclick="getBoard('{{board.lower()}}')">{{ board.upper() }}</a></li>
        </ul>
    {%- endfor -%}
{%- endfor -%}
</ul>