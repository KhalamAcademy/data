{%- for grade in grades -%}
    <span class="grade" id="grade{{grade}}">{% if lang == "en" %}Grade {% elif lang == "hi" %}Standard (рдкрдж) {% endif %}{{ grade }}</span>
    {%- for board in grade_boards[grade] -%}
        <ul class="boards" id="grade{{grade}}-{{loop.index}}">
            <li class="board" id="grade{{grade}}-{{board.lower()}}"><a href="#" onclick="getBoard({{grade}}, '{{board.lower()}}')">{{ board.upper() }}</a></li>
        </ul>
    {%- endfor -%}
{%- endfor -%}
